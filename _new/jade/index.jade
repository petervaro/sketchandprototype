    function letterify(s) {return s.replace(/[^A-Za-z0-9]/, '');}


//------------------------------------------------------------------------------
mixin post(captions)
    a(href  = '../html/' + letterify(captions[0]) + '.html'
      class = 'content-bottom-post')
        img(src='../img/' + letterify(captions[0]) + '/preview.png')
        div
            div
                each caption in captions
                    span= caption



